BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
            multiline: False
            on_text:app.get_value(input_miles.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.change_value(input_miles.text, 1)
            Button:
                text: 'Down'
                on_press: app.change_value(input_miles.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.get_value(input_miles.text)
    Label:
        id: output_km
        color: (0,1,1,1)
        text: app.message

